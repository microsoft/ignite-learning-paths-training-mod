    <x:Double x:Key="NegativeDefaultMargin">-16</x:Double>
    <x:Int32 x:Key="NegativeDefaultMarginInt">-16</x:Int32>

    <x:Double x:Key="0.25xDefaultMargin">4</x:Double>
    <x:Double x:Key="Negative0.25xDefaultMargin">-4</x:Double>

